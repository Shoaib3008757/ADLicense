<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tourist_license"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flytechnology.adlicense.TouristLicense"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/actionbartitle"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AD License"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/logo"
        android:src="@drawable/plus"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/actionbartitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_welcome"
        android:text="Tourist License"
        android:textSize="25dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_first"
        android:orientation="vertical"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tv_username"
                android:textColor="@color/textcolor"
                android:text="Owner Name"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                android:backgroundTint="@color/linecolor"
                android:id="@+id/et_ownername"
                android:layout_toRightOf="@+id/tv_username"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tv_password"
                android:textColor="@color/textcolor"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_email"
                android:layout_toRightOf="@+id/tv_password"
                android:textColor="@color/textcolor"
                android:backgroundTint="@color/linecolor"
                android:textColorHint="@color/textcolor"
                android:inputType="textEmailAddress"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tv_nationalid"
                android:textColor="@color/textcolor"
                android:text="National ID"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_nationalid"
                android:layout_toRightOf="@+id/tv_nationalid"
                android:textColor="@color/textcolor"
                android:backgroundTint="@color/linecolor"
                android:textColorHint="@color/textcolor"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tv_passport"
                android:textColor="@color/textcolor"
                android:text="Passport"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_passort"
                android:layout_toRightOf="@+id/tv_passport"
                android:textColor="@color/textcolor"
                android:backgroundTint="@color/linecolor"
                android:textColorHint="@color/textcolor"
                android:inputType="textEmailAddress"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_befor_attachment"
                android:text="TDI Agreement Copy"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/bt_attachment"
                android:layout_below="@+id/tv_befor_attachment"
                android:textColor="@color/white"
                android:text="Attachment"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_shap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_filename"
                android:text="No File"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_befor_attachment"
                android:layout_toRightOf="@id/bt_attachment"/>


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/bt_submit"
                android:textColor="@color/white"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shap"/>

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
